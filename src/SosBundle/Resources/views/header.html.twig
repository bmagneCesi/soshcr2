    <header>
{% endif %}

    <div class="col-xs-2">
        <a href="{{ path('index') }}" id="logo"> <img class="img-responsive" src="{{ asset('bundles/sos/global/img/logo.png') }}" alt=""> </a>
    </div> 
    
    <!-- Title desktop -->
     <div class="col-xs-8 text-center">
        <img class="title" src="{{ asset('bundles/sos/global/img/title.png') }}" class="img-responsive">  
    </div>
    <!-- Title desktop -->

     <div class="col-xs-2">
        <a id="login">
            <a class="btn btn-link-1 launch-modal hidden-xs hidden-sm" id="login-text" href="{{ path('fos_user_security_login') }}" data-modal-id="modal-login">Espace candidat</a>
            <span id="login-icon" class="hidden-md hidden-lg img-responsive"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
        </a>  
    </div>  

</header>
