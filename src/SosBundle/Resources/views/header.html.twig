<!-- MODAL -->
<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
        </button>
        <h3 class="modal-title" id="modal-login-label">Accèder à mon espace</h3>
        <p>Veuillez entrez votre adresse email et votre mot de passe</p>
      </div>
      <div class="modal-body">
        {% block fos_user_content %}{% endblock %}
      </div>
    </div>
  </div>
</div>

{% if app.request.attributes.get('_route') != 'index' %}
    <header class="header-small">
{% else %}
    <header>
{% endif %}

    <div class="col-xs-2">
        <a href="{{ path('index') }}" id="logo"> <img class="img-responsive" src="{{ asset('bundles/sos/global/img/logo.png') }}" alt=""> </a>
    </div> 
    
    <!-- Title desktop -->
     <div class="col-xs-8 text-center">
        <img class="title" src="{{ asset('bundles/sos/global/img/title.png') }}" class="img-responsive">  
    </div>
    <!-- Title desktop -->

     <div class="col-xs-2">
        {% if app.user %}
          {{ app.user.prenom }}
        {% else %}
            <a class="launch-modal hidden-xs hidden-sm" id="login" href="#" data-modal-id="modal-login">Espace candidat</a>
            <span id="login-icon" class="hidden-md hidden-lg img-responsive"><i class="fa fa-user-circle-o" aria-hidden="true"></i></span>
        {% endif %}
    </div>  

</header>
<div id="barre-jaune-header"></div>