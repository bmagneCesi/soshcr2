{% extends 'SosBundle::base.html.twig' %}

{% block javascripts %}
	
	{# Si la ville n'est pas trouvé ni par google ni dans notre bdd #}
	{% if error is defined %}
		<script>var error = "{{ error }}";</script>
	{% endif %}

	<script type="text/javascript" src="{{ asset('bundles/sos/global/js/ville.js') }}"></script>

{% endblock %}

{% block body %}

<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
	<h3 class="title-heading">Où est situé votre établissement ?</h3> <br>
	
	<form method="POST">
		<div class="input-group add-on" style="width:100%">
			<input class="form-control" placeholder="ville" name="ville[libelle]" id="ville">

			<input type="hidden" name="ville[latitude]">
			<input type="hidden" name="ville[longitude]">

			<input type="hidden" name="form" value="ville">
			<div class="input-group-btn" style="width:40px">
			    <button class="btn btn-default" id="seach-btn" type="submit">
					<i class="fa fa-search" ></i>
				</button>	
		  	</div>
		</div>
	</form>
</div>

{% endblock %}