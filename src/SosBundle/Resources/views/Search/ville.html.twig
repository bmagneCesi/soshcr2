{% extends '::base.html.twig' %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('bundles/sos/global/js/ville.js') }}"></script>
{% endblock %}

{% block body %}

<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
	<h3 class="title-heading">Où est situé votre établissement ?</h3> <br>
	
	<form method="POST" id="ville-submit" action="{{ path('classification') }}">
		<div class="input-group add-on" style="width:100%">
			<input class="form-control" required placeholder="Adresse, ville..." name="ville" id="ville">

			<input type="hidden" name="form" value="ville">
			<div class="input-group-btn" style="width:40px">
			    <button class="btn btn-default" id="seach-btn" type="submit">
					<i class="fa fa-search" ></i>
				</button>	
		  	</div>
		</div>
	</form>
</div>

{% endblock %}