{% extends '::base.html.twig' %}

{% block body %}

<div id="poste_restauration" class="col-xs-12 sos-form">
	<h3 class="title-heading">Quel poste ?</h3>

		{% if data.match_employe.nb == 0 %}
			<p>Personne ne correspond à vos critères. </p>
		{% elseif data.match_employe.nb > 1 %}
			<p>{{ data.match_employe.nb }} personnes correspondent à vos critères. </p>
		{% elseif data.match_employe.nb == 1 %}
			<p>{{ data.match_employe.nb }}personne correspond à vos critères.</p>
		{% endif %}
		<br>

	<ul class="col-lg-8 col-lg-offset-2">

		{% for poste in postes %}

	        <li class="col-sm-6 col-md-2 text-center">
	            <form method="post">
	                <button>
	                    <img src="{{ asset('bundles/sos/global/img/poste/' ~ poste.id ~ '.png') }} " alt="" class="img-responsive form-img">
	                    <p>{{ poste.libelle | raw }}</p>
	                </button>
	                <input type="hidden" value="{{ poste.id }}" name="poste">
					<input type="hidden" name="ville[libelle]" value="{{ data.ville.libelle }}">
					<input type="hidden" name="ville[latitude]" value="{{ data.ville.latitude }}">
					<input type="hidden" name="ville[longitude]" value="{{ data.ville.longitude }}">
					<input type="hidden" name="classification" value="{{ data.classification }}">
					<input type="hidden" name="secteur_activite" value="{{ data.secteur_activite }}">
					{# Si on est dans la restauration #}
					{% if data.service_activite is defined %}
						<input type="hidden" name="service_activite" value="{{ data.service_activite }}">
					{% endif %}
					<input type="hidden" name="form" value="poste">
	            </form>
	        </li>

		{% endfor %}

	</ul>

    <div class="clearfix spacer"></div>

    <form action="{{ path('search')}}" method="post">
		<input type="hidden" name="ville[libelle]" value="{{ data.ville.libelle }}">
		<input type="hidden" name="ville[latitude]" value="{{ data.ville.latitude }}">
		<input type="hidden" name="ville[longitude]" value="{{ data.ville.longitude }}">
		<input type="hidden" name="classification" value="{{ data.classification }}">
		<input type="hidden" name="secteur_activite" value="{{ data.secteur_activite }}">
		{# Si on est dans la restauration #}
		{% if data.service_activite is defined %}
			<input type="hidden" name="service_activite" value="{{ data.service_activite }}">
			<input type="hidden" name="form" value="secteur">
		{% else %}
			<input type="hidden" name="form" value="classification">
		{% endif %}
		
		<button type="submit" class="pull-left back col-sm-offset-2"><i class="fa fa-caret-left" aria-hidden="true"></i> Précédent</button>
	</form>
</div>


{% endblock %}