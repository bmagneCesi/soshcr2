{% extends 'SosBundle::layout.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('bundles/sos/global/js/ville.js') }}"></script>
	
{% endblock %}

{% block sos_body %}

<div class="col-xs-12 col-sm-6 col-sm-offset-3 sos-form col-md-4 col-md-offset-4">
	<h3 class="title-heading">OÃ¹ veux tu travailler ?</h3> <br>
	
	<form method="POST" id="ville-submit" action="{{ path('informations_formation') }}">
		<div class="input-group add-on" style="width:100%">

			<input class="col-sm-8" required placeholder="Adresse, ville..." name="ville" id="ville">
			<input class="col-sm-4" required placeholder="Rayon (en km)" name="rayon_emploi" id="rayon_emploi">
			<input type="hidden" name="contrat" value="{{ data.contrat }}">
			<input type="hidden" name="contrat_duree" value="{{ data.contrat_duree }}">
			{% if data.cursus_scolaire is defined %}
				<input type="hidden" name="cursus_scolaire" value="{{ data.cursus_scolaire }}">
			{% endif %}
			<input type="hidden" name="classification" value="{{ data.classification }}">

			<input type="hidden" name="form" value="ville">
			<div class="input-group-btn" style="width:40px">
			    <button class="btn btn-default" id="seach-btn" type="submit">
					<i class="fa fa-search" ></i>
				</button>	
		  	</div>
		</div>
	</form>

</div>

{% endblock %}