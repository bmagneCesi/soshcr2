{% extends 'SosBundle::layout.html.twig' %}

{% block sos_body %}

<div id="poste_restauration" class="col-xs-12 sos-form">
	<h3 class="title-heading">Quel poste ?</h3>
		<br>

	<ul class="col-lg-8 col-lg-offset-2">

		{% for poste in postes %}

	        <li class="
	        	{% if postes|length == 5 %}
		        		col-sm-2 {% if loop.first %} col-sm-offset-1 {% endif %}
					{% else %}
						col-sm-{{ 12 / postes|length }}
		        	{% endif %} text-center">
		        	
	            <form method="post" action="{{ path('informations_experience') }}">
	                <button>
	                    <img style="max-height:75px; width:auto; " src="{{ asset('bundles/sos/global/img/poste/' ~ poste.id ~ '.png') }} " alt="" class="img-responsive form-img">
	                    <p>{{ poste.libelle | raw }}</p>
	                </button>
	                <input type="hidden" value="{{ poste.id }}" name="poste">
					<input type="hidden" name="ville[libelle]" value="{{ data.ville.libelle }}">
					<input type="hidden" name="ville[latitude]" value="{{ data.ville.latitude }}">
					<input type="hidden" name="ville[longitude]" value="{{ data.ville.longitude }}">
					<input type="hidden" name="rayon_emploi" value="{{ data.rayon_emploi }}">
					<input type="hidden" name="classification" value="{{ data.classification }}">
					<input type="hidden" name="secteur_activite" value="{{ data.secteur_activite }}">
					<input type="hidden" name="contrat" value="{{ data.contrat }}">
					<input type="hidden" name="contrat" value="{{ data.contrat }}">
					<input type="hidden" name="contrat_duree" value="{{ data.contrat_duree }}">
					<input type="hidden" name="formation_minimum" value="{{ data.formation_minimum }}">
					<input type="hidden" name="anglais" value="{{ data.anglais }}">

					{% if data.cursus_scolaire is defined %}
						<input type="hidden" name="cursus_scolaire" value="{{ data.cursus_scolaire }}">
					{% endif %}
					<input type="hidden" name="form" value="poste">
	            </form>
	        </li>

		{% endfor %}

	</ul>

    <div class="clearfix spacer"></div>

</div>


{% endblock %}