{% extends 'SosBundle::layout.html.twig' %}
{% block sos_body %}
	<h3>Signalements en attente</h3>
{% for result in results%}
<form action="{{ path('signalements') }}" method="POST">
<div id="containers" class="col-sm-3">
<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="nom_prenom">Nom</label>  
	<div>
		<input id="nom" name="nom" value="{{result.nom}}" size="25"/>
	</div>
</div>
</div>

<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="nom_prenom">Prénom</label>  
	<div>
		<input id="prenom" name="prenom" value="{{result.prenom}}" size="25"/>
	</div>
</div>
</div>
<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="telephone">Téléphone</label>  
	<div>
		<input id="telephone" name="telephone" value="{{result.telephone}}" size="25"/>
	</div>
</div>
</div>

<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="email">Email</label>  
	<div>
		<input id="email" name="email" value="{{result.email}}" size="25"/>
	</div>
</div>
</div>

<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="raison">Que s'est il passé</label>  
	<div>
				<textarea style="width:215px" rows="4">{{result.raison}}</textarea>
	</div>
	</div>
</div>

<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="propostion">Proposition</label>  
	<div>
		<textarea style="width:215px"rows="4">{{result.proposition}}</textarea>	
	</div>
	</div>
</div>

	<div class="input-group">
		<h3>Signaleur</h3>
	</div>
<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="nomsignaleur">Nom</label>  
	<div>
		<input id="nomsignaleur" name="nomsignaleur" value="{{result.nomsignaleur}}" size="25"/>
	</div>
	</div>
</div>

<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="prenomsignaleur">Prénom</label>  
	<div>
		<input id="prenomsignaleur" name="prenomsignaleur" value="{{result.prenomsignaleur}}" size="25"/>
	</div>
	</div>
</div>
<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="telephonesignaleur">Téléphone</label>  
	<div>
		<input id="telephonesignaleur" name="telephonesignaleur" value="{{result.telephonesignaleur}}" size="25"/>
	</div>
	</div>
</div>

<!-- Text input-->
<div class="form-group">
	<div class="input-group">
	<label for="emailsignaleur">Email</label>  
	<div>
		<input id="emailsignaleur" name="emailsignaleur" value="{{result.emailsignaleur}}" size="25"/>
	</div>
	</div>
</div>

<input type="hidden" name="id_signalement" value="{{result.id}}">

<!-- Button -->
<div class="form-group">
	<div class="input-group">
	<label for="valider"></label>
	<div>
		<input type="submit" name="supprimer" value="Supprimer signalement" class="btn btn-primary">
	</div>
</div>
</div>

</form>
</div>
{% endfor %}
{% endblock %}