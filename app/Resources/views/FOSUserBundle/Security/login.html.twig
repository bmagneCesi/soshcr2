<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <input class="form-control" type="text" placeholder="Adresse email" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <div class="form-group">
        <input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" />
        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
    </div>
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">Se souvenir de moi</label>
    </div>
    <input class="btn-soshcr col-xs-12 col-sm-8 col-sm-offset-2" type="submit" id="_submit" name="_submit" value="Connexion" />
    <div class="clearfix"></div>
</form>